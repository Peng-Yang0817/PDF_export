
@{
    ViewBag.Title = "Index4";
    var DataListAdministration = ViewBag.DataListAdministration;
    var DataListDate = ViewBag.DataListDate;
    var DataListHref = ViewBag.DataListHref;
    var DataList = ViewBag.DataList;
    var DataListSize = DataList.Count;
}


<hr />
@{
    <table class="table table-hover" width="100%">
        <thead>
            <tr>
                <th width="15%">日期</th>
                <th width="60%">標題</th>
                <th width="15%">發布單位</th>
            </tr>
        </thead>
        <tbody>
            @for (int i = 0; i < DataListSize; i++)
            {
                <tr>
                    <td>@DataListDate[i]</td>
                    <td>
                        <a href="@DataListHref[i]" title="@DataList[i]">@DataList[i]</a>
                    </td>
                    <td>@DataListAdministration[i]</td>
                </tr>

            }
        </tbody>

    </table>
}
